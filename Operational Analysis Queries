-- Part C: Efficiency & Growth Strategy Analysis Queries
-- 1. Relationship between distance covered and average delivery time
WITH stats AS (
    SELECT 
        COUNT(*) AS n,
        SUM(Distance_Covered) AS sum_x,
        SUM(Average_Delivery_Time) AS sum_y,
        SUM(Distance_Covered * Average_Delivery_Time) AS sum_xy,
        SUM(Distance_Covered * Distance_Covered) AS sum_x_squared,
        SUM(Average_Delivery_Time * Average_Delivery_Time) AS sum_y_squared
    FROM 
        (SELECT 
            D.Distance_Covered,
            AVG(O.Delivery_Time) AS Average_Delivery_Time
        FROM 
            Delivery D
        JOIN 
            Orders O ON D.OrderID = O.OrderID
        GROUP BY 
            D.Distance_Covered) AS subquery
)

SELECT 
    (n * sum_xy - sum_x * sum_y) / 
    SQRT((n * sum_x_squared - sum_x * sum_x) * (n * sum_y_squared - sum_y * sum_y)) AS correlation_coefficient
FROM 
    stats;


-- 2. Strategies to optimize store-level operations and improve delivery efficiency
-- - Route Optimization
-- - Inventory Management
-- - Performance Metrics

-- 3. Revenue Maximization Formula
-- Revenue = Total Orders * Average Order Value
-- Calculate Total Orders and Average Order Value
WITH revenue_stats AS (
    SELECT 
        COUNT(OrderID) AS Total_Orders,
        AVG(TotalAmount) AS Average_Order_Value
    FROM 
        Orders
)

SELECT 
    Total_Orders,
    Average_Order_Value,
    Total_Orders * Average_Order_Value AS Total_Revenue
FROM 
    revenue_stats;


-- 4. Per Order Profit Maximization Formula
-- Profit = (Total Revenue - Total Cost) / Total Orders
-- Calculate Total Revenue and Total Cost
-- Calculate Total Revenue and Total Cost
WITH order_stats AS (
    SELECT 
        O.Order_ID,
        O.Total_Amount AS Total_Revenue,
        SUM(P.Price * OD.Quantity) AS Total_Cost
    FROM 
        Orders O
    JOIN 
        OrderDetails OD ON O.Order_ID = OD.Order_ID
    JOIN 
        Products P ON OD.Product_ID = P.Product_ID
    GROUP BY 
        O.Order_ID, O.Total_Amount
)

-- Calculate Per Order Profit
SELECT 
    COUNT(Order_ID) AS Total_Orders,
    SUM(Total_Revenue) AS Total_Revenue,
    SUM(Total_Cost) AS Total_Cost,
    (SUM(Total_Revenue) - SUM(Total_Cost)) / COUNT(Order_ID) AS Per_Order_Profit
FROM 
    order_stats;


